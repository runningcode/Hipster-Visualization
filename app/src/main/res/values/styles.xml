<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/app_background</item>
        <!--<item name="android:listViewStyle">@style/TransparentListView</item>-->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- compatibility -->
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Orange" parent="AppTheme">
        <item name="android:actionBarStyle">@style/OrangeActionBar</item>
        <!-- compatibility -->
        <item name="actionBarStyle">@style/OrangeActionBar</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <!-- compatibility -->
        <item name="actionBarStyle">@style/BlueActionBar</item>
    </style>

    <style name="OrangeActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/trans_white</item>
        <item name="logo">@drawable/ic_actionbar_logo</item>
        <item name="background">@color/trans_white</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/blue</item>
        <item name="logo">@drawable/ic_actionbar_logo</item>
        <item name="background">@color/blue</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
    </style>

</resources>
