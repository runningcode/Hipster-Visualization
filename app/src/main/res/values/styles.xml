<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>

        <!-- compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Orange" parent="AppTheme">
        <item name="android:actionBarStyle">@style/OrangeActionBar</item>
        <!-- compatibility -->
        <item name="actionBarStyle">@style/OrangeActionBar</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <!-- compatibility -->
        <item name="actionBarStyle">@style/BlueActionBar</item>
    </style>

    <style name="OrangeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/orange</item>
        <item name="background">@color/orange</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <item name="background">@color/blue</item>
    </style>

</resources>
